{
  "name": "playwright-server",
  "version": "1.0.0",
  "description": "A minimalistic Node.js server with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "postinstall": "playwright install chromium",
    "cron": "ts-node src/scripts/run-cron-job.ts",
    "cron:build": "npm run build && node dist/scripts/run-cron-job.js",
    "scrape:all": "ts-node src/scripts/run-cron-job.ts",
    "scrape:arbeitnow": "ts-node src/test-arbeitnow.ts",
    "scrape:swissdev": "ts-node src/scripts/scrapeSwissDevJobs.ts",
    "cleanup:non-it": "ts-node src/scripts/cleanup-non-it-jobs.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "node-cron": "^4.1.0",
    "playwright": "^1.53.1",
    "playwright-chromium": "^1.40.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.0"
  }
}
